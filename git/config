[core]
	editor = vim

[alias]
	s = status -s
	ss = status
	d = diff
	c = commit
	a = add
	l = "log -n 10 --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
    b = branch

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    unmerged = blue bold


[color "status"]
    added=green
    changed=yellow
    untracked=red
