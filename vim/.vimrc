filetype on
filetype indent on
filetype plugin on

" Show existing tabs with 4 spaces
set tabstop=4
" Indent (>) with 4 spaces
set shiftwidth=4
" On pressing tab, insert 4 spaces
set expandtab

syntax on
colorscheme tomorrow_night_eighties

" Show full filepath all the time
set laststatus=2
set statusline+=%F
